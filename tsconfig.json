{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "types": ["vite-plugin-svgr/client"],

    "baseUrl": "./",
    "paths": {
      "@market-duck/apis/*":["src/apis/*"],
      "@market-duck/assets/*":["src/assets/*"],
      "@market-duck/atoms/*":["src/atoms/*"],
      "@market-duck/components/*":["src/components/*"],
      "@market-duck/hooks/*":["src/hooks/*"],
      "@market-duck/pages/*":["src/pages/*"],
      "@market-duck/utils/*":["src/utils/*"],
      "@market-duck/types/*":["src/types/*"],
      "@market-duck/models/*":["src/apis/models/*"],
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "svg.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
